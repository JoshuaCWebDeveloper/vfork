PROTOCOLS="\
verificatum.protocol.distrkeygen.DemoPlainKeys \
verificatum.protocol.secretsharing.DemoPedersen \
verificatum.protocol.secretsharing.DemoPedersenSequential \
verificatum.protocol.coinflip.DemoCoinFlipPRingSource \
verificatum.protocol.hvzk.DemoSigmaProof \
verificatum.protocol.hvzk.DemoSigmaProofSequential \
verificatum.protocol.hvzk.DemoPoSTW \
verificatum.protocol.distrkeygen.DemoIndependentGenerator \
verificatum.protocol.distrkeygen.DemoIndependentGeneratorsI \
verificatum.protocol.distrkeygen.DemoDKG"

#PROTOCOLS=verificatum.protocol.distrkeygen.DemoPlainKeys
#PROTOCOLS=verificatum.protocol.secretsharing.DemoPedersen
#PROTOCOLS=verificatum.protocol.secretsharing.DemoPedersenSequential
#PROTOCOLS=verificatum.protocol.coinflip.DemoCoinFlipPRingSource
#PROTOCOLS=verificatum.protocol.hvzk.DemoSigmaProof
#PROTOCOLS=verificatum.protocol.hvzk.DemoSigmaProofSequential
#PROTOCOLS=verificatum.protocol.hvzk.DemoPoSTW
#PROTOCOLS=verificatum.protocol.hvzk.DemoPoSTWSequential
#PROTOCOLS=verificatum.protocol.distrkeygen.DemoIndependentGenerator
#PROTOCOLS=verificatum.protocol.distrkeygen.DemoIndependentGeneratorsI
#PROTOCOLS=verificatum.protocol.distrkeygen.DemoDKG


for prot in `echo $PROTOCOLS`;
do

java \
-Djava.security.egd=file:/dev/./urandom \
-Djavax.accessibility.assistive_technologies=java.lang.String \
$prot -g -nopart 3 -thres 2 demodir_$prot

java \
-Djava.security.egd=file:/dev/./urandom \
-Djavax.accessibility.assistive_technologies=java.lang.String \
$prot -e -close demodir_$prot

#-Xms1024m -Xmx2048m \
#-Xms1024m -Xmx2048m \
# java \
# -Xms1024m -Xmx2048m \
# -Djava.security.egd=file:/dev/./urandom \
# -Djavax.accessibility.assistive_technologies=java.lang.String \
# $prot -e -close demodir_$prot

done

